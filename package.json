{
  "name": "project-ecommerce-website",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack E-commerce website with React frontend and Express backend",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev\"",
    "build": "npm run build --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "preview": "npm run preview --workspace=frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dipesh-J/Project-Ecommerce-Website.git"
  },
  "author": "Dipesh Joshi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dipesh-J/Project-Ecommerce-Website/issues"
  },
  "homepage": "https://github.com/Dipesh-J/Project-Ecommerce-Website#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
